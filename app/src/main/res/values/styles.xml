<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="general">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sansation_bold</item>
        <item name="android:textSize">52sp</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_marginTop">-150dp</item>
    </style>
    <style name="button">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sansation_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_width">210dp</item>
    </style>
    <style name="flashcardText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sansation_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:backgroundTint">#00FFFFFF</item>
    </style>
    <style name="listView">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sansation_regular</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>